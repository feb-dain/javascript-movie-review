{
  "compilerOptions": {
    "target": "ES2015",

    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "cypress", "dist"]
}
